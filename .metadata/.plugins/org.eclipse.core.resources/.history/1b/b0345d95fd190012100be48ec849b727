import java.util.Iterator;
import java.util.List;
import java.util.ArrayList;

public class composite extends figure {
	
	List<figure> lst = new ArrayList<figure>();
	List<int> dX = new ArrayList<int>();
	List<int> dY = new ArrayList<int>();
	
	/*private void drawme(shape s, coord dlt) {
		//s.setCoord(this.crd.x + s.getCoord().x, this.crd.y + s.getCoord().y);
		s.setCoord(this.crd.x + dlt.x, this.crd.y + dlt.y);
		s.draw();
		s.setCoord(dlt.x - this.crd.x, dlt.y - this.crd.y);
	}*/
	public void add(figure s) {
			//circle tmp = (circle)s;
			lst.add(s);
			dX.add(s.getX());
			dY.add(s.getY());
	}
	
	public void draw() {
		System.out.println("\nComposite:");
		Iterator<figure> it=lst.iterator();
		Iterator itdX=dX.iterator();
		Iterator itdY=dY.iterator();
		while(it.hasNext()) {
			//this.drawme(it.next(), itd.next());
			shape s = it.next();
			int dX = itdX.next();
			int dY = itdY.next();
			s.setCoord(this.crd.x + dlt.x, this.crd.y + dlt.y);
			s.draw();
			s.setCoord(dlt.x - this.crd.x, dlt.y - this.crd.y);
		}
	}
		
}
